{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es2020",
		"outDir": "dist",
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/i18n/*.json"],
	"exclude": ["node_modules", "dist"]
}